{{#partial "header"}}
	<tr>
		<td align="center" class="em_white" style="font-family:'Karla', 'Open Sans', 'Roboto', Arial, sans-serif; font-size:36px; line-height:40px; color:#ffffff; font-weight:bold;">We're following up with a reminder </td>
	</tr>
{{/partial}}

{{#partial "body"}}
	<tr>
		<td align="left" class="em_blk" style="font-family:'Karla', 'Open Sans', 'Roboto', Arial, sans-serif; font-size:20px; line-height:24px; color:#000000; font-weight:bold;">Details</td>
	</tr>
	<tr>
		<td height="20" style="height:20px; line-height:0px; font-size:0px;" class="em_h20">&nbsp;</td>
	</tr>
	<tr>
  		<td align="left" class="em_blue" style="font-family:'Karla', 'Open Sans', 'Roboto', Arial, sans-serif; font-size:18px; line-height:24px; color:#000;">
  			<p>
  				Here are the relevant details:
  			</p>
  		</td>
  </tr>
  <tr>
    		<td align="left" class="em_blue" style="font-family:'Karla', 'Open Sans', 'Roboto', Arial, sans-serif; font-size:18px; line-height:24px; color:#000;">
    			<p>
					{{#if endUserHtmlRepresentation}}
						{{{endUserHtmlRepresentation}}}
					{{else}}
						{{{metadata}}}
					{{/if}}
    			</p>
    		</td>
    </tr>
  <tr>
    		<td align="left" class="em_blue" style="font-family:'Karla', 'Open Sans', 'Roboto', Arial, sans-serif; font-size:18px; line-height:24px; color:#000;">
    			<p>
    				Here are links to the actions you can record:
    			</p>
    		</td>
  </tr>
  <tr>
      <td height="30" bgcolor="#ffffff" width="50%" colspan="2"></td>
  </tr>
  {{#each interactionOptions }}
  <tr>
		<td align="left" class="em_blue" style="font-family:'Karla', 'Open Sans', 'Roboto', Arial, sans-serif; font-size:18px; line-height:24px; color:#000;">
			<p>
			  <a href="{{optionUrl}}">{{optionDescription}}</a>
			</p>
		</td>
	</tr>
	<tr>
      <td height="10" bgcolor="#ffffff" width="50%" colspan="2"></td>
  </tr>
	{{/each}}

	<tr>
		<td height="20" bgcolor="#ffffff" width="50%" colspan="2"></td>
	</tr>
{{/partial}}

{{> layouts/en/default}}